<configuration>
    <appender name="STDOUT"
        class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>{"@timestamp":%d{yyyy-MM-dd-HH:mm:ss.ZZZ},"@version":"1","data":"%msg", "%logger{44}","levle":"%level","app";"Staff-solution","version":"0.0.1-SNAPSHOT","traceId":"%X{trace_id}","spanId":"%X{span_id}"}\n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/staff-sol.log</file>
        <encoder>
            <pattern>{"@timestamp":%d{yyyy-MM-dd-HH:mm:ss.ZZZ},"@version":"1","data":"%msg", "%logger{44}","levle":"%level","app";"Staff-solution","version":"0.0.1-SNAPSHOT","traceId":"%X{trace_id}","spanId":"%X{span_id}"}\n</pattern>
        </encoder>
    </appender>
    <logger name="com.apress" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>